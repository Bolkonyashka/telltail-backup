<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="{{ meta.charset }}">
    <title>{{ title }}</title>
    <meta name="description" content="{{ meta.description }}">
    <link rel="shortcut icon" href="{{ staticBasePath }}favicon.png" type="image/png">
    <link rel="stylesheet" href="{{ staticBasePath }}index.css" media="screen">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Gabriela" rel="stylesheet">
</head>

<body>
    <header class="header">
        <div class="header__icon"></div>
        <div class="header__label">
            <a href="/"><span>Telltail</span>Games</a>
        </div>
    </header>
    <article class="scene">
        {{#if scene.image}}
            <section class="scene__description scene__description__text-position_{{ textPosition }}"
                style="background-image: url({{ scene.image }})">
                <div class="description__text">
                    {{ scene.description }}
                </div>
            </section>
        {{^}}
            <section class="scene__description scene__description__text-position_left-up"
                style="height: auto">
                <div class="description__text" style="color: #000">
                    {{ scene.description }}
                </div>
            </section>
        {{/if}}
        {{#if scene.achievements}}
            <section class="scene__achievements">
                {{#each scene.achievements}}
                    <div class="achievement">
                        <img class="achievement_image"
                            src="{{ image }}">
                        <div class="achievement__info">
                            <div class="achievement__label">Достижение получено</div>
                            <div class="achievement__name">{{ name }}</div>
                        </div>
                    </div>
                {{/each}}
            </section>
        {{/if}}
        <section class="scene__actions">
            {{#if scene.actions}}
                {{#each scene.actions}}
                    <a href="/scene/{{ targetSceneId }}" class="scene__action-button">{{ name }}</a>
                {{/each}}
            {{^}}
                <a href="/scene/{{ adventureFirstSceneID }}" class="scene__action-button">Начать заново</a>
            {{/if}}
        </section>
        
    </article>
</body>

</html>